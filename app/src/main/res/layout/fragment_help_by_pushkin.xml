<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragment.HelpByPushkinFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:paddingStart="@dimen/_7sdp"
        android:paddingTop="@dimen/_7sdp"
        android:paddingEnd="@dimen/_7sdp"
        android:paddingBottom="@dimen/_4sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/_4sdp"
            android:text="@string/help_by_pushkin"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/tv_keepCountHints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/keep_count_hints"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_advantageFullApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/info_count_hints"
            android:textColor="@color/deepPurple_300"
            android:textSize="@dimen/_8sdp"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_emptyHints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_300"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/pushkin_is_tired"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_helpWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_200"
        android:gravity="center"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_27sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_27sdp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"
        tools:text="«пример»" />

    <Button
        android:id="@+id/btn_thanks"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/thanks" />

</LinearLayout>