<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/grey_50</item>
    </style>

    <!-- Кастомная AppTheme.Launcher. Устанавливает в качестве фона вашу drawable -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!-- для Android 5+ вы можете поменять цвет colorPrimaryDark, чтобы соответствовать цвету windowBackground -->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:padding">@dimen/_13sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextInfo">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInfoCaps" parent="TextInfo">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>